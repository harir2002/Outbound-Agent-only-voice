# ============================================
# BFSI AI PLATFORM - BACKEND CONFIGURATION
# ============================================

# -------------------- AI SERVICES --------------------
# Groq LLM API
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768
GROQ_TEMPERATURE=0.3
GROQ_MAX_TOKENS=2048

# Sarvam AI (Voice TTS/STT)
SARVAM_API_KEY=your_sarvam_api_key_here
SARVAM_TTS_MODEL=bulbul:v1
SARVAM_STT_MODEL=saaras:v1
SARVAM_API_URL=https://api.sarvam.ai/v1

# -------------------- COMMUNICATION --------------------
# Twilio Voice API
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number



# -------------------- SECURITY --------------------
# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# -------------------- APPLICATION --------------------
# Environment
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# -------------------- COMPLIANCE --------------------
# PII Masking
ENABLE_PII_MASKING=True
PII_PATTERNS=phone,email,aadhaar,pan,account

# Call Recording
CALL_RECORDING_ENABLED=True
CALL_RECORDING_CONSENT_REQUIRED=True

# Data Retention (days)
DATA_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365



# -------------------- RATE LIMITING --------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# -------------------- BFSI SECTORS --------------------
SUPPORTED_SECTORS=banking,insurance,nbfc,mutual_funds
DEFAULT_SECTOR=banking

# -------------------- LANGUAGES --------------------
SUPPORTED_LANGUAGES=en,hi,ta,te,mr,bn
DEFAULT_LANGUAGE=en

# -------------------- MONITORING --------------------
ENABLE_METRICS=True
SENTRY_DSN=your_sentry_dsn_here
